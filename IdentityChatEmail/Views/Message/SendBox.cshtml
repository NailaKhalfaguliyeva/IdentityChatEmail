@model List<IdentityChatEmail.Entities.Message>
@{
    Layout = "~/Views/Shared/_MessageLayout.cshtml";
    
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Recipient Email</th>
        <th>Subject</th>
        <th>Open Message</th>
    </tr>
    @foreach (var item in Model)
    {
       
        <tr>
            
            <td>@item.ReceiverEmail</td>
            <td>@item.Subject</td>
            <td><a href="/Message/MessageDetail/@item.MessageId" class="btn btn-warning">Open Message</a></td>
        </tr>
    }
</table>


